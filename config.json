{
    "caddy": {
        "url": "https://caddyserver.com/api/download?os=linux&arch=amd64&p=github.com%2Fcaddy-dns%2Fnamecheap",
        "caddyfile": "Caddyfile"
    },
    "volume": "/app/mount",
    "params": {
        "arch": "amd64"
    },
    "service_commands": [
        {
            "name": "ipfs",
            "command": "/app/ipfs daemon",
            "build_commands": [
                "mv /app/mount/ipfs /app/ipfs",
                "chmod +x /app/ipfs",
                "/app/ipfs init",
                "/app/ipfs config Swarm.ConnMgr.HighWater 96 --json",
                "/app/ipfs config Swarm.ConnMgr.LowWater 32 --json",
                "/app/ipfs config Datastore.StorageMax 1GB"
            ],
            "ports": [],
            "env": {}
        },
        {
            "name": "backend",
            "command": "/app/backend --port 1800 --ipfs-gateway http://127.0.0.1:8080",
            "build_commands": [
                "mv /app/mount/backend /app/backend",
                "chmod +x /app/backend"
            ],
            "ports": [ 1800 ],
            "env": {}
        }
    ]
}